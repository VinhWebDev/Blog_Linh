<body>
    <%include ./components/header%>
        <div class="container">
            <div class="row">
                <div class="intro row">
                    <img class="col-md-6" src="/images/giangoi.jpg" alt="" srcset="">
                    <p class="col-md-12 ">I HOPE YOU LIKE THIS BLOG!</p>
                    <p class="bd col-1"></p>
